{
  "name"            : "__MSG_ext_name__",
  "version"         : "1.0.3",
  "description"     : "__MSG_ext_description__",
  "author"          : "__MSG_ext_author__",
  "manifest_version": 2,
  "default_locale"  : "en",
  "omnibox"         : {
    "keyword": "sp"
  },
  "icons"           : {
    "16" : "img/sp-favicon-16x16.png",
    "48" : "img/sp-favicon-48x48.png",
    "128": "img/sp-favicon-128x128.png"
  },
  "background"      : {
    "scripts"   : [
      "js/background.js"
    ],
    "persistent": true
  },
  "options_ui"      : {
    "chrome_style": true,
    "page"        : "html/options.html"
  },
  "permissions"     : [
    "*://*/*",
    "contextMenus",
    "storage",
    "webNavigation"
  ]
}
